package com.lyy.controller;

 
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;

import com.lyy.dao.UserDao;
import com.lyy.pojo.User;
import com.lyy.service.AdminService;
import com.lyy.service.UserService;
import com.opensymphony.xwork2.ActionContext;

public class UserAction {
    private User user;
    private Integer type;

   
	@Autowired
    private UserService userService;
	
	@Autowired
    private AdminService adminService;
    
    public String login() throws Exception{
    	
    	
        if(type==1){
        	if(adminService.login(user)==null){
            	return "fail";
            }else{
            	Map session = ActionContext.getContext().getSession();  
            	session.put("admin", adminService.login(user));  
            	return "adminsuccess";
            }
        } else{
        	if(userService.login(user)==null){
        		return "fail";
            }else{
            	Map session = ActionContext.getContext().getSession();  
            	session.put("username", userService.login(user).getName());  
            	return "success";
            }
        }
        
        
    }
    
    public String register() throws Exception{
        
         userService.register(user);
        	return "success";
        
        
    }

	public User getUser() {
		return user;
	}

	public void setUser(User user) {
		this.user = user;
	}

	 public Integer getType() {
			return type;
		}

		public void setType(Integer type) {
			this.type = type;
		}

 
    

}
